
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
@model List<CustomerAccount>
<div class="page-title">
    <div class="title_left">
        <h3>IBAN ve Hesap Bilgileri</h3>
    </div>
</div>

<div class="clearfix"></div>

<div class="col-md-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Hesap Numaraları</h2>
            <ul class="nav navbar-right panel_toolbox"></ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content bs-example-popovers">
            @foreach (CustomerAccount customerAccount in Model)
            {
                <div class="alert alert-success alert-dismissible " role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <strong>Hesap Döviz Türü: @customerAccount.Currency</strong>
                    -- Banka: @customerAccount.BankBranch - Hesap No: @customerAccount.AccountNumber
                </div>
            }
        </div>
    </div>
</div>

